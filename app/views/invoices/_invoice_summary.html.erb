<h4 ><b>GST INVOICE</b></h4>
<div>
  <div><b>Invoice Date:</b> <%= @invoice.invoice_date %></div>
  <div><b>Due Date:</b> <%= @invoice.due_date %></div>
  <div><b>INVOICE #:</b> <%= @invoice.formatted_invoice_number %></div>
</div>


<div>
  <div><b>Invoice Type: </b><%= 'Regular' %></div>
  <div><b>Billing Month: </b><%= "#{@invoice.billing_month.present? ? @invoice.billing_month :  @invoice.invoice_date.to_date.strftime("%B")} #{@invoice.invoice_date.to_date.strftime("%Y")}" rescue @invoice.invoice_date %></div>
</div>